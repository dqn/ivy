{
  "name": "ivy-vn",
  "displayName": "Ivy Visual Novel",
  "description": "Language support for Ivy visual novel scenario files",
  "version": "0.2.0",
  "publisher": "dqn",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Programming Languages",
    "Snippets"
  ],
  "activationEvents": [
    "onLanguage:ivy",
    "onLanguage:yaml"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "ivy",
        "aliases": [
          "Ivy Scenario",
          "ivy"
        ],
        "extensions": [
          ".ivy.yaml",
          ".ivy.yml"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "ivy",
        "scopeName": "source.ivy",
        "path": "./syntaxes/ivy.tmLanguage.json"
      }
    ],
    "snippets": [
      {
        "language": "ivy",
        "path": "./snippets/ivy.json"
      },
      {
        "language": "yaml",
        "path": "./snippets/ivy.json"
      }
    ],
    "commands": [
      {
        "command": "ivy.preview",
        "title": "Ivy: Open Preview",
        "icon": "$(play)"
      },
      {
        "command": "ivy.validate",
        "title": "Ivy: Validate Scenario"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "ivy.preview",
          "when": "resourceLangId == ivy || resourceFilename =~ /\\.yaml$/ || resourceFilename =~ /\\.yml$/",
          "group": "navigation"
        }
      ]
    },
    "keybindings": [
      {
        "command": "ivy.preview",
        "key": "ctrl+shift+p",
        "mac": "cmd+shift+p",
        "when": "resourceLangId == ivy"
      }
    ],
    "configuration": {
      "title": "Ivy",
      "properties": {
        "ivy.previewPort": {
          "type": "number",
          "default": 3000,
          "description": "HTTP port for preview server"
        },
        "ivy.ivyPreviewPath": {
          "type": "string",
          "default": "",
          "description": "Path to ivy-preview binary (leave empty to use 'ivy-preview' from PATH)"
        }
      }
    }
  },
  "scripts": {
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "vscode:prepublish": "npm run compile"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.80.0",
    "typescript": "^5.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/dqn/ivy"
  },
  "license": "MIT"
}
